<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.ulster.mur.diamonitor.Search">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_above="@+id/btnSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:contentDescription="Plate Image"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/search"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/tvSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Search Food Database for Carbs"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp" />

    <EditText
        android:id="@+id/etSearchTerm"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_above="@+id/btnHome"
        android:layout_alignStart="@+id/tvSearchLabel"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="Enter Food to Search"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etSearchTerm"
        android:layout_toEndOf="@+id/etSearchTerm"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="SearchButtonClicked"
        android:text="Search"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="390dp" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:onClick="HomeButtonClicked"
        android:text="Back To Main"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteY="463dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/powered_by_fatsecret" />
</RelativeLayout>
