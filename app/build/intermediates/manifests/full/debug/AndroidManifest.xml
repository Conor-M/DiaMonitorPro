<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.ulster.mur.diamonitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Base.AppTheme.Launcher" >
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.AddBlood"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.AddInsulin"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.AddCarbs"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.UserSettings"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.ViewBloodReadings"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.ViewInsulinMeasures"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.ViewCarbRecords"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.ViewType"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.SearchResult"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.Search"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.AnalyseBlood"
            android:screenOrientation="portrait" />
        <activity
            android:name="uk.ac.ulster.mur.diamonitor.splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>